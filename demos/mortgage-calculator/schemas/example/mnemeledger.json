{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MNEME Ledger Schema",
  "description": "Schema for verifiable, append-only state transitions",
  "type": "object",
  "properties": {
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "timestamp", "hash", "prevHash", "operation", "payload"],
        "properties": {
          "id": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" },
          "hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
          "prevHash": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
          "operation": {
            "type": "string",
            "enum": ["SET", "UPDATE", "DELETE", "VALIDATION", "CONFLICT", "VIOLATION"]
          },
          "payload": { "type": "object" },
          "signature": { "type": "string" }
        }
      }
    },
    "headHash": { "type": "string" },
    "verified": { "type": "boolean", "default": false }
  }
}

