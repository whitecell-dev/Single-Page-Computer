{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "KERN Execution Schema",
  "description": "Defines execution semantics and runtime configuration for AXIS/KERN engines",
  "type": "object",
  "properties": {
    "mode": {
      "type": "string",
      "enum": ["iterative", "dag", "reactive", "solver", "backward", "rete", "ledger"],
      "default": "iterative"
    },
    "maxIterations": { "type": "integer", "default": 20 },
    "timeoutMs": { "type": "integer", "default": 5000 },
    "parallelism": { "type": "integer", "minimum": 1, "default": 1 },
    "convergenceThreshold": { "type": "number", "minimum": 0, "maximum": 1, "default": 0 },
    "enableAudit": { "type": "boolean", "default": true },
    "enableInvariants": { "type": "boolean", "default": true },
    "ledgerMode": {
      "type": "string",
      "enum": ["append_only", "ephemeral", "deterministic_replay"],
      "default": "append_only"
    }
  },
  "required": ["mode"]
}

